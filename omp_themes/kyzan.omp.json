{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": false,
  "pwd": "osc7",
  "var": {
    "ColorMode": "dark"
  },
  "palettes": {
    "template": "{{  if eq .Var.ColorMode \"light\"}}catppuccin-latte{{ else }}tokyonight_moon{{ end }}",
    "list": {
      "tokyonight_moon": {
        "base": "#1b1d2b",
        "green": "#c3e88d",
        "blue": "#82aaff",
        "teal": "#4fd6be",
        "red": "#ff757f",
        "orange": "#ff966c",
        "gutter_back": "#3b4261",
        "bg_statusline": "#1e2030",
        "fg_sidebar": "#a9b1d6"
      },
      "catppuccin-latte": {
        "base": "#eff1f5",
        "green": "#40a02b",
        "blue": "#1e66f5",
        "teal": "#179299",
        "red": "#d20f39",
        "orange": "#fe640b",
        "gutter_back": "#ccd0da",
        "bg_statusline": "#eff1f5",
        "fg_sidebar": "#4c4c69"
      }
    }
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "leading_diamond": "",
          "background": "p:blue",
          "foreground": "p:base",
          "template": " {{ .Icon }} {{ .HostName }} "
        },
        {
          "type": "path",
          "style": "diamond",
          "trailing_diamond": " ",
          "background": "p:gutter_back",
          "foreground": "p:blue",
          "template": "   {{ .Path }} ",
          "properties": {
            "folder_icon": " ",
            "folder_separator_icon": "  ",
            "home_icon": " ",
            "style": "agnoster_short",
            "mapped_locations": {
              "~/Documents/Unisa": " "
            }
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": " ",
          "foreground": "p:fg_sidebar",
          "background": "p:bg_statusline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Working.Changed }}   {{ .Working.Added }}  {{ .Working.Modified }}  {{ .Working.Deleted }} {{ end }}",
          "properties": {
            "branch_icon": " ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "python",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": " ",
          "background": "p:gutter_back",
          "foreground": "p:blue",
          "properties": {
            "display_default": false,
            "folder_name_fallback": false
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "status",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": " ",
          "foreground": "p:base",
          "background": "p:green",
          "background_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "template": "{{ if gt .Code 0 }}   {{ else }}    {{ end }}"
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "leading_diamond": "",
          "foreground": "p:blue",
          "background": "p:gutter_back",
          "template": "  {{ .FormattedMs }} ",
          "properties": {
            "always_enabled": true
          },
          "invert_powerline": true
        },
        {
          "type": "time",
          "style": "diamond",
          "trailing_diamond": "",
          "background": "p:blue",
          "foreground": "p:base",
          "template": "  {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "3:04 PM"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "p:orange",
          "template": " "
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:teal",
          "template": "<b>{{ .UserName }}</b> "
        }
      ],
      "newline": true
    }
  ],
  "secondary_prompt": {
    "background": "transparent",
    "foreground": "p:green",
    "template": " "
  },
  "transient_prompt": {
    "background": "transparent",
    "foreground": "p:teal",
    "template": "<b>{{ .UserName }}</b> "
  }
}
